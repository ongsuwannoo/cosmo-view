{
  "name": "@cosmo-view/ui",
  "version": "1.0.0",
  "description": "Component library for cosmo-view with Component-Driven Development approach",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup && tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "dev": "concurrently \"tsup --watch\" \"tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --watch\"",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "format": "biome format src/ --write",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rm -rf dist storybook-static"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.400.0",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@cosmo-view/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.39",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.1.11",
    "tailwindcss": "^3.4.6",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "vite": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
